<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>

		<!-- Database connection settings -->
		<property name="connection.driver_class">org.postgresql.Driver</property>
		<property name="connection.url">jdbc:postgresql://localhost:5432/demodb</property>
		<property name="connection.username">postgres</property>
		<property name="connection.password">welcome</property>

		<!-- JDBC connection pool (use the built-in) -->
		<property name="connection.pool_size">3</property>

		<!-- SQL dialect -->
		<property name="dialect">org.hibernate.dialect.ProgressDialect</property>

		<!-- Disable the second-level cache -->
		<property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>

		<!-- Echo all executed SQL to stdout -->
		<property name="show_sql">true</property>

		<!-- Keeps the existing schema and does not recreate. Just update the existing one -->
		<property name="hbm2ddl.auto">create</property>

		<!-- Drop and re-create the database schema on startup -->
		<!-- <property name="hbm2ddl.auto">create</property> -->

		<!-- Names the annotated entity class -->
		<mapping class="dto.UserDetails_V4" />

	</session-factory>

</hibernate-configuration>